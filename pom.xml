    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.gilang</groupId>
                <artifactId>gilang-common</artifactId>
                <version>${gilang-network-version}</version>
            </dependency>

            <dependency>
                <groupId>com.gilang</groupId>
                <artifactId>gilang-network-core</artifactId>
                <version>${gilang-network-version}</version>
            </dependency>
            <dependency>
