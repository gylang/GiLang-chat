    <groupId>com.gilang</groupId>
    <artifactId>gilang-network</artifactId>
    <name>GiLang-network</name>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <modules>
        <module>gilang-network-core</module>
        <module>gilang-common</module>
        <module>gilang-netty-translator</module>
        <module>example</module>
        <module>gilang-network-starter</module>
        <module>GiLang-network-layer-adapter</module>
        <module>GiLang-network-protocol</module>

